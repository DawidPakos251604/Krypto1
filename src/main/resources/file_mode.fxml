<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="FileModeController"
            prefHeight="300.0" prefWidth="600.0">

    <children>
        <VBox spacing="20" alignment="CENTER" prefHeight="300.0" prefWidth="600.0">
            <HBox spacing="10" alignment="CENTER">
                <Label text="Rozmiar klucza:"/>
                <ComboBox fx:id="keySizeCombo">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="128"/>
                            <String fx:value="192"/>
                            <String fx:value="256"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label text="Wpisz klucz:"/>
                <TextField fx:id="keyInput" promptText="Wpisz klucz"/>
            </HBox>

            <!-- Dwa przyciski do wyboru, czy szyfrować, czy deszyfrować -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="Wczytaj plik" onAction="#loadFromFile"/>
                <Button text="Zapisz plik (Szyfruj)" onAction="#saveToFile" fx:id="encryptButton"/>
                <Button text="Zapisz plik (Deszyfruj)" onAction="#decryptFile" fx:id="decryptButton"/>
            </HBox>
        </VBox>
    </children>

</AnchorPane>
