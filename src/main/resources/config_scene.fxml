<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ConfigScene"
            prefHeight="500.0" prefWidth="800.0">

    <children>
        <VBox spacing="10" alignment="CENTER" prefHeight="500.0" prefWidth="1000.0">

            <HBox spacing="10" alignment="CENTER">
            <Label text="Rozmiar klucza:"/>
            <ComboBox fx:id="keySizeCombo">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="128"/>
                        <String fx:value="192"/>
                        <String fx:value="256"/>
                    </FXCollections>
                </items>
            </ComboBox>

                <Label text="Wpisz klucz:"/>
                <TextField fx:id="keyInput" promptText="Wpisz klucz"/>

            </HBox>

            <HBox spacing="500" alignment="CENTER">
                <Button text="Wczytaj z pliku" onAction="#loadFromFile"/>
                <Button text="Zapisz do pliku" onAction="#saveToFile"/>
            </HBox>


            <HBox spacing="10" alignment="CENTER">
                <TextArea fx:id="inputText" promptText="Wprowadź tekst lub załaduj z pliku" prefWidth="350" prefHeight="400"/>
                <Button text="Szyfruj" onAction="#encryptText"/>
                <Button text="Deszyfruj" onAction="#decryptText"/>
                <TextArea fx:id="outputText" promptText="Tutaj pojawi się wynik" prefWidth="350" prefHeight="400"/>
            </HBox>


        </VBox>
    </children>


</AnchorPane>
